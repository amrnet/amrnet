# MongoDB Configuration Atlas (Production)
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ClusterName"

# MongoDB Configuration Local (Development)
# Uncomment for local development
# MONGODB_URI="mongodb://localhost:27017"

# Fixie SOCKS proxy (if using Heroku with Atlas)
# FIXIE_URL="your-fixie-proxy-url"

# Server Configuration
PORT=8080
NODE_ENV=development

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080

# Optional: API rate limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Optional: Email service (if implemented)
# EMAIL_SERVICE_API_KEY="your-email-api-key"
# EMAIL_FROM="noreply@yourdomain.com"
